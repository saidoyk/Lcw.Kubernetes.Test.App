# Learn about building .NET container images:
# https://github.com/dotnet/dotnet-docker/blob/main/samples/README.md
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-alpine AS build
WORKDIR /app

# copy csproj and restore as distinct layers
COPY Lcw.Kubernetes.Test.App/*.csproj .
RUN dotnet restore 

# copy everything else and build app
COPY Lcw.Kubernetes.Test.App/. .
RUN dotnet publish --self-contained false --no-restore -o /app


# final stage/image
FROM mcr.microsoft.com/dotnet/core/runtime:3.1
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["./Lcw.Kubernetes.Test.App"]

